<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BrowserTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBrowserWhite</item>
        <item name="colorPrimaryDark">@color/colorBrowserText</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SlideUpAndDownAnimationTheme">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="FullScreenDialogTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar">
    </style>

    <style name="BrowserTheme.DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>